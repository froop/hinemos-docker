ARG FROM
FROM ${FROM}

# Hinemos Version
ARG MAJOR
ARG MINOR
ARG DISTRIBUTION
ARG ARCHITECTURE

ENV PACKAGE=hinemos-${MAJOR}-agent-${MAJOR}.${MINOR}-1.${DISTRIBUTION}.${ARCHITECTURE}.rpm

WORKDIR /tmp/package
COPY ${PACKAGE} ./

RUN HINEMOS_MANAGER=manager \
  yum -y install ${PACKAGE} && yum clean all && rm -f ${PACKAGE}
#  yum -y install https://github.com/hinemos/hinemos/releases/download/v${MAJOR}.${MINOR}/hinemos-${MAJOR}-agent-${MAJOR}.${MINOR}-1.${DISTRIBUTION}.${ARCHITECTURE}.rpm \

RUN rm -rf /tmp/package

# for https
#RUN sed -i "s|http://manager:8081|https://manager:8444|" /opt/hinemos_agent/conf/Agent.properties
