ARG FROM
FROM ${FROM}

ARG PACKAGE

WORKDIR /tmp/package
COPY ${PACKAGE} ./

RUN HINEMOS_MANAGER=manager \
  yum -y install ${PACKAGE} && yum clean all && rm -f ${PACKAGE}

RUN rm -rf /tmp/package

# for https
#RUN sed -i "s|http://manager:8081|https://manager:8444|" /opt/hinemos_agent/conf/Agent.properties
