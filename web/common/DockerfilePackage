ARG FROM
FROM ${FROM}

# hinemos version
ARG MAJOR
ARG MINOR
ARG DISTRIBUTION
ARG ARCHITECTURE

ENV PACKAGE=hinemos-${MAJOR}-web-${MAJOR}.${MINOR}-1.${DISTRIBUTION}.${ARCHITECTURE}.rpm

WORKDIR /tmp/package
COPY ${PACKAGE} ./

RUN yum -y install ${PACKAGE} && rm -f ${PACKAGE} \
#RUN yum -y install https://github.com/hinemos/hinemos/releases/download/v${MAJOR}.${MINOR}/hinemos-${MAJOR}-web-${MAJOR}.${MINOR}-1.${DISTRIBUTION}.${ARCHITECTURE}.rpm \
  && yum clean all

RUN rm -rf /tmp/package
