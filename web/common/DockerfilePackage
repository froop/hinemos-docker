ARG FROM
FROM ${FROM}

# hinemos version
ARG MAJOR
ARG MINOR
ARG DISTRIBUTION
ARG ARCHITECTURE

ENV PACKAGE=hinemos-${MAJOR}-web-${MAJOR}.${MINOR}-1.${DISTRIBUTION}.${ARCHITECTURE}.rpm

WORKDIR /tmp/package
COPY ${PACKAGE} ./

RUN yum -y install ${PACKAGE} && rm -f ${PACKAGE} && yum clean all

RUN rm -rf /tmp/package
