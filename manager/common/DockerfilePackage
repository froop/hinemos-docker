ARG FROM
FROM ${FROM}

ARG PACKAGE

WORKDIR /tmp/package
COPY ${PACKAGE} ./

RUN yum -y install ${PACKAGE} && rm -f ${PACKAGE} \
  && yum clean all \
  && rm -rf /opt/hinemos/sbin/db_init

RUN rm -rf /tmp/package

#VOLUME /opt/hinemos/var/data

# enable remote debug
RUN sed -i "s/#\(.* -Xdebug \)/\1/" /opt/hinemos/etc/hinemos.cfg
